<template name="menuTpl"> 
	<view class="tab-bar" >   
		<view wx:if="{{returnHome}}" class="tab-bar-home" bindtap="url" data-type="relaunch"
			data-url="/pages/home/index/home_index">
			<text class="tab-bar-home-text icon-homefill text-grey"></text>
		</view>

		<view class="tab-bar-border"></view>
		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/apptwaste/pages/default/index/default_index">
			<image class="tab-icon" src="/projects/apptwaste/images/tabbar/home{{curMenu=='home_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='home_index'?'menu-project':''}}">首页</view>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/apptwaste/pages/news/cate1/news_cate1">
			<image class="tab-icon" src="/projects/apptwaste/images/tabbar/news{{curMenu=='news_cate1'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='news_cate1'?'menu-project':''}}">公告通知</view>
		</view>  

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/apptwaste/pages/news/cate2/news_cate2">
			<image class="tab-icon" src="/projects/apptwaste/images/tabbar/cate2{{curMenu=='news_cate2'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='news_cate2'?'menu-project':''}}">分类知识</view>
		</view>  

		<view wx:if="{{skin.cate2!==false}}" class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/apptwaste/pages/meet/calendar/meet_calendar">
			<image class="tab-icon" src="/projects/apptwaste/images/tabbar/day{{curMenu=='meet_calendar'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='meet_calendar'?'menu-project':''}}">预约日历</view>
		</view>
	 
		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/apptwaste/pages/my/index/my_index">
			<image class="tab-icon" src="/projects/apptwaste/images/tabbar/my{{curMenu=='my_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='my_index'?'menu-project':''}}">个人中心</view>
		</view>


	</view>
</template>